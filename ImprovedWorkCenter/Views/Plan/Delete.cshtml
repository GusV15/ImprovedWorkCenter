@model ImprovedWorkCenter.Models.Plan

@{
    ViewData["Title"] = "Delete";
}

<h1>Eliminar Plan</h1>

<h3>¿Está seguro/a que desea eliminar el Plan?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Precio)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Precio)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.TipoPlan)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TipoPlan)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="PlanId" />
        <input type="submit" value="Eliminar" class="btn btn-danger" />
        <a asp-action="Index">Volver</a>
    </form>
</div>
