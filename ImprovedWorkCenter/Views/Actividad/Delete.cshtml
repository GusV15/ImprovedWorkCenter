@model ImprovedWorkCenter.Models.Actividad

@{
    ViewData["Title"] = "Delete";
}

<h1>Eliminar Actividad</h1>

<h3>¿Está seguro/a que desea eliminar la Actividad?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Tipo)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Tipo)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.NombreSocio)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NombreSocio)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.HorarioInicio)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.HorarioInicio)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.HorarioFinal)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.HorarioFinal)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="ActividadId" />
        <input type="submit" value="Eliminar" class="btn btn-danger btn-custom" />
        <a asp-action="Index">Volver</a>
    </form>
</div>
