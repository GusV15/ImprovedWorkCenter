@model ImprovedWorkCenter.Models.Actividad

@{
    ViewData["Title"] = "Create";
}

<h1>Agregar Actividad</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Tipo" class="control-label"></label>
                <select asp-for="Tipo" class="form-control" asp-items="Html.GetEnumSelectList<TipoActividad>()">
                    <option selected="selected" value="">Ingrese el tipo de actividad</option>
                </select>
                <span asp-validation-for="Tipo" class="text-danger"></span>
            </div>
            @if (ViewBag.SociosActividad != null)
           {
            <label asp-for="SocioId" class="control-label" name="Socio"></label>
            @Html.DropDownList("SocioId", ViewBag.SociosActividad as SelectList, "Selecciones un Socio...", new { @class = "form-control mb-3" });
           }
            <div class="form-group">
                <label asp-for="HorarioInicio" class="control-label"></label>
                <input asp-for="HorarioInicio" class="form-control" />
                <span asp-validation-for="HorarioInicio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HorarioFinal" class="control-label"></label>
                <input asp-for="HorarioFinal" class="form-control" />
                <span asp-validation-for="HorarioFinal" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Agregar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Volver</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
